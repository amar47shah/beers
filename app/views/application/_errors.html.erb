<% errors = model.errors %>
<% if errors.present? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(errors.count, 'error') %>
      prohibited this <%= model.class.model_name.human %> from being saved:
    </h2>
    <ul>
      <% errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
